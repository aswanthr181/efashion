<%- include('../layouts/header.ejs'); -%>
    <style>
        body {
            background: #f7f7ff;

        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 0 solid transparent;
            border-radius: .25rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);
        }

        .me-2 {
            margin-right: .5rem !important;
        }
    </style>
    <div class="container">
        <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">

        </div>
    </div>
    <div class="container">
        <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">

        </div>
    </div>
    <div class="container">
        <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">

        </div>
    </div>
    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin"
                                    class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>
                                        <%=user.name%>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card">
                        <% if (user.address.length>0) {
                            for( let i = 0; i < user.address.length; i++ ) { %>
                                <div class="card-body">
                                    <hr>
                                    <div class="row mb-3 mt-4">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">NAME</h6>
                                        </div>
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">: <%=user.address[i].name%>
                                            </h6>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">HOUSE NAME</h6>
                                        </div>
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">:<%=user.address[i].houseName%>
                                            </h6>
                                        </div>
                                    </div>


                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">TOWN/CITY</h6>
                                        </div>
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">:<%=user.address[i].townCity%>
                                            </h6>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">DISTRICT</h6>
                                        </div>
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">:<%=user.address[i].district%>
                                            </h6>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">STATE</h6>
                                        </div>
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">:<%=user.address[i].state%>
                                            </h6>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0 text-dark ">PIN CODE</h6>
                                        </div>
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">:<%=user.address[i].pincode%>
                                            </h6>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">EMAIL</h6>
                                        </div>
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">:<%=user.address[i].email%>
                                            </h6>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">MOBILE NUMBER</h6>
                                        </div>
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">:<%=user.address[i].mobileNo%>
                                            </h6>
                                        </div>
                                    </div>
                                    <div class="float-end">
                                        <a href="/editAddress?id=<%=user.address[i]._id%>&index=<%=i%>"
                                            class="btn btn-primary ">Edit Address</a>
                                        <a href="/deleteAddress?id=<%=user.address[i]._id%>&index=<%=i%>"
                                            class="btn btn-danger ">Delete Address</a>

                                    </div>
                                </div>
                                <%}}else{ %>
                                    <h3>No address available</h3>
                                    <%}%>
                                        <hr> 
                                        <div class="d-flex justify-content-center mb-3 ">
                                        <a href="/addAddress"  style="width: 220px;" 
                                            class="flex-c-m stext-101 cl0 size-101 bg-dark bor1 hov-btn3 p-lr-15 trans-04 js-addcart-detail">Add
                                            New Address</a>
                                        </div>    
                                        </hr>

                             </div>

                     </div>
              </div>
        </div>
    </div>
    <%- include('../layouts/footer.ejs'); -%>